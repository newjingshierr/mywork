@{
    ViewBag.Title = "My Media Portal";
}
@section featured {
    <section class="featured">
        <div class="content-wrapper">
            <hgroup class="title">
                <h2>@ViewBag.Message</h2>
            </hgroup>
        </div>
    </section>
}
<h3>Upload and Encode videos in three easy steps:</h3>
<ol class="round">
    <li class="one">
        <h5>Register/Login</h5>
        Visit the @Html.ActionLink("Registration Page", "Register", "Account") to register. 
    </li>

    <li class="two">
        <h5>Upload</h5>
        "My Video Portal" makes it easy to upload your @Html.ActionLink("personal Videos", "Index", "Media")        
    </li>

    <li class="three">
        <h5>View</h5>
        One uploaded you can keep @Html.ActionLink("your videos", "Index", "Media")  to yourself or make them public and share them with the world.
    </li>
</ol>
